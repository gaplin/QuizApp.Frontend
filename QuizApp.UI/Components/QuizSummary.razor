<MudPaper>
    <MudStack>
        <MudText>
            Your Score: @Score
        </MudText>
        <MudText>
            @if(Win)
            {
                @("Congratulations! You\'ve won")
            }
            else
            {
                @("Unlucky! You\'ve lost")
            }
        </MudText>
        <MudButtonGroup Color="@Color.Primary" Variant="Variant.Filled">
            <MudButton OnClick="@TryAgainCallback">
                <MudText>
                    Try Again
                </MudText>
            </MudButton>
            <MudButton OnClick="@GoToHomePage">
                <MudText>
                    Go to home page
                </MudText>
            </MudButton>
        </MudButtonGroup>
    </MudStack>
</MudPaper>